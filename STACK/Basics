package STACK;
import java.util.ArrayDeque;

/* the operation that we have in stack-push,pop,peek,isempty,search */
public class Stacks_Basic{
    public static void main(String args[]){

        //CREATE STACK
        ArrayDeque<Integer> stack=new ArrayDeque<>();

        // ADDING ELEMENTS
        System.out.println("PUSHING");
        stack.push(1);
        stack.push(2);
        stack.push(3);
        stack.push(4);
        stack.push(5);
        System.out.println(stack);

        //POPING
        System.out.println("POPING");
        System.out.println(stack.pop());
        System.out.println(stack);

        //PEEKING
        System.out.println("PEEKING");
        System.out.println(stack.peekFirst());
        System.out.println(stack.peekLast());
        System.out.println(stack.peek());
        System.out.println(stack);

        //IS EMPTY
        System.out.println("IS EMPTY TRUE/FALSE");
        System.out.println(stack.isEmpty());

        // ACCESSING THE FIRST AND LAST
        System.out.println("ACCESSING THE FIRST AND LAST");
        System.out.println(stack.getFirst());
        System.out.println(stack.getLast());

        //SEARCHING 3 IN IT
        System.out.println("SEARCHING 3 USING THE OBJECT");
        System.out.println(stack.contains(3));

        //OFFER
        System.out.println("OFFER");
        System.out.println(stack.offer(6));
        System.out.println(stack);

        System.out.println(stack.offerFirst(2));
        System.out.println(stack.offerLast(3));
        System.out.println(stack);
        



    }
}
